function u = sinusoidal_input(t)

delta_t = 0.01; % (s) - has to match timestep used for FD integration

% Generating input

% Time period of sinusoidal input
T = 100; % (s)

if (t == 0)
    % For 3 car case, lead car starting at 20 m ahead
    u(1) = 20; % Position of lead car
    u(2) = 25; % Instantaneous speed (m/s)
else
    u(1) = 20 + (25 + 5*sin((2*pi*(t - delta_t))/T)) * delta_t;
    u(2) = 25 + 5*sin((2*pi*t)/T);

end

end